<?xml version='1.0' encoding='utf-8'?>
<widget id="org.easyprezzie.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>EasyPrezzie</name>
    <description>
        Free gifts offered by the local businesses in your area.
    </description>
    <author email="contact@easyprezzie.com" href="http://easyprezzie.com">
        EasyPrezzie Team
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
	<preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-build-tool" value="gradle" />.
    <gap:plugin name="cordova-plugin-battery-status"  source="npm"/>
    <gap:plugin name="cordova-plugin-camera" source="npm" />
    <gap:plugin name="cordova-plugin-media-capture" source="npm" />
    <gap:plugin name="cordova-plugin-console"  source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm"  />

    <gap:plugin name="cordova-plugin-device-orientation"  source="npm" />
    <gap:plugin name="cordova-plugin-dialogs" source="npm"  />
    <gap:plugin name="cordova-plugin-globalization" source="npm"  />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm"  />
    <gap:plugin name="cordova-plugin-media"  source="npm" />
    <gap:plugin name="cordova-plugin-network-information"  source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen"  source="npm" />
    <gap:plugin name="cordova-plugin-vibration"  source="npm" />
    <icon src="icon.png" />
    <icon platform="android" qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    <icon platform="blackberry" src="res/icon/blackberry/icon-80.png" />
    <icon platform="blackberry" gap:state="hover" src="res/icon/blackberry/icon-80.png" />
    <icon platform="ios" height="57" src="res/icon/ios/icon-57.png" width="57" />
    <icon platform="ios" height="72" src="res/icon/ios/icon-72.png" width="72" />
    <icon platform="ios" height="76" src="res/icon/ios/icon-76.png" width="76" />
    <icon platform="ios" height="114" src="res/icon/ios/icon-57-2x.png" width="114" />
    <icon platform="ios" height="144" src="res/icon/ios/icon-72-2x.png" width="144" />
    <icon platform="ios" height="152" src="res/icon/ios/icon-76-2x.png" width="152" />
    <icon platform="ios" height="120" src="res/icon/ios/icon-120.png" width="120" />
    <icon platform="webos" src="res/icon/webos/icon-64.png" />
    <icon platform="winphone" src="res/icon/windows-phone/icon-48.png" />
    <icon platform="winphone" gap:role="background" src="res/icon/windows-phone/icon-173-tile.png" />
    <splash platform="android" qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash platform="blackberry" src="res/screen/blackberry/screen-225.png" />
    <splash platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    <splash platform="ios" height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <splash platform="ios" height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <splash platform="ios" height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
    <splash platform="ios" height="768" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
    <splash platform="winphone" src="res/screen/windows-phone/screen-portrait.jpg" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="com.phonegap.plugins.barcodescanner" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
